# Example secrets file for act testing
# Copy to .env.act and fill in values for testing

# GitHub token (can use a PAT with limited scope for testing)
GITHUB_TOKEN=ghp_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Claude Code OAuth token (use mock value for testing)
CLAUDE_CODE_OAUTH_TOKEN=mock_claude_token_for_testing

# Repository information (usually auto-detected by act)
GITHUB_REPOSITORY=owner/repo
GITHUB_REPOSITORY_OWNER=owner

# Mock behavior control
MOCK_CLAUDE_SCENARIO=simple_task
# Options: simple_task, parallel_task, completion_detection, error_case

# Enable debug output
ACT_DEBUG=false